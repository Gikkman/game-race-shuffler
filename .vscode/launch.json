{
  "version": "0.2.0",
  "configurations": [
  {
      "name": "Run Client",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/packages/client",
      "args": [
          "dist/index.js"
      ],
      "env": {
        "LOGLEVEL": "debug"
      },
      "outputCapture": "std",
      "preLaunchTask": "npm: build"
  },
  {
    "name": "Run Server",
    "type": "node",
    "request": "launch",
    "cwd": "${workspaceFolder}/packages/server",
    "args": [
        "dist/index.js"
    ],
    "env": {
      "LOGLEVEL": "debug"
    },
    "outputCapture": "std",
    "preLaunchTask": "npm: build"
}
  ]
}
