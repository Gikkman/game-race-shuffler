{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Client A",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/packages/client",
      "args": [
        "dist/index.js",
        "--config=client-config-A.ini"
      ],
      "env": {
        "LOGLEVEL": "debug"
      },
      "outputCapture": "std",
      "preLaunchTask": "npm: build"
    },
    {
      "name": "Run Client B",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/packages/client",
      "args": [
        "dist/index.js",
        "--config=client-config-B.ini"
      ],
      "env": {
        "LOGLEVEL": "debug"
      },
      "outputCapture": "std",
      "preLaunchTask": "npm: build"
    },
    {
      "name": "Run Server",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/packages/server",
      "args": [
        "dist/index.js"
      ],
      "env": {
        "LOGLEVEL": "debug"
      },
      "outputCapture": "std",
      "preLaunchTask": "npm: build"
    }
  ]
}
